{
  "$schema": "https://raw.githubusercontent.com/QuestPackageManager/QPM.Package/refs/heads/main/qpm.schema.json",
  "version": "0.4.0",
  "sharedDir": "shared",
  "dependenciesDir": "extern",
  "info": {
    "name": "Chroma",
    "id": "chroma",
    "version": "2.9.4",
    "url": "https://github.com/bsq-ports/Chroma",
    "additionalData": {
      "headersOnly": true,
      "overrideSoName": "libchroma.so"
    }
  },
  "workspace": {
    "scripts": {
      "build": [
        "pwsh ./scripts/build.ps1 --release"
      ],
      "clean": [
        "pwsh ./scripts/build.ps1 -clean"
      ],
      "copy": [
        "pwsh ./scripts/copy.ps1"
      ],
      "copyRelease": [
        "pwsh ./scripts/copy.ps1 --release"
      ],
      "qmod": [
        "pwsh ./scripts/createqmod.ps1"
      ]
    },
    "ndk": "^27.2.12479018",
    "qmodIncludeDirs": [
      "./build",
      "./extern/libs"
    ],
    "qmodIncludeFiles": [],
    "qmodOutput": "Chroma.qmod"
  },
  "dependencies": [
    {
      "id": "beatsaber-hook",
      "versionRange": "^6.4.2",
      "additionalData": {}
    },
    {
      "id": "custom-types",
      "versionRange": "^0.18.3",
      "additionalData": {
        "includeQmod": true,
        "private": true
      }
    },
    {
      "id": "bs-cordl",
      "versionRange": "4007.*",
      "additionalData": {
        "includeQmod": true,
        "private": true
      }
    },
    {
      "id": "custom-json-data",
      "versionRange": "^0.24.2",
      "additionalData": {
        "private": true
      }
    },
    {
      "id": "config-utils",
      "versionRange": "^2.0.3",
      "additionalData": {
        "private": true
      }
    },
    {
      "id": "bsml",
      "versionRange": "^0.4.54",
      "additionalData": {
        "includeQmod": true,
        "private": true
      }
    },
    {
      "id": "conditional-dependencies",
      "versionRange": "^0.3.0",
      "additionalData": {}
    },
    {
      "id": "sombrero",
      "versionRange": "^0.1.43",
      "additionalData": {}
    },
    {
      "id": "tracks",
      "versionRange": "^2.4.3",
      "additionalData": {
        "private": true
      }
    },
    {
      "id": "boost-regex",
      "versionRange": "*",
      "additionalData": {
        "private": true
      }
    },
    {
      "id": "scotland2",
      "versionRange": "^0.1.6",
      "additionalData": {
        "includeQmod": false
      }
    },
    {
      "id": "songcore",
      "versionRange": "^1.1.23",
      "additionalData": {
        "includeQmod": true,
        "private": true
      }
    },
    {
      "id": "paper2_scotland2",
      "versionRange": "^4.6.4",
      "additionalData": {}
    }
  ]
}
